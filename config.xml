<?xml version='1.0' encoding='utf-8'?>
<widget id="org.sucresware.jvshoot" version="0.9.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>JVSHOOT</name>
    <description>
        Simple space-shooter in the JVlike universe
    </description>
    <author email="sr@mgk.dev" href="https://mgk.dev">
        MGK
    </author>
    <content src="cordova.html" />
    <preference name="Orientation" value="portrait" />
    <preference name="BackgroundColor" value="0x50710ff"/>
    <preference name="Fullscreen" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
